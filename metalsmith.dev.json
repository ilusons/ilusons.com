{
    "destination": "./public",
    "metadata": {
        "title": "ilusons",
        "description": "Freelance Software Development",
        "author": "ilusons",
        "subtitle": "",
        "url": "http://ilusons.com",
        "site": {
            "title": "ilusons",
            "description": "Freelance Software Development",
            "author": "ilusons",
            "url": "http://ilusons.com"
        }
    },
    "plugins": {
        "metalsmith-define": {
            "production": true
        },
        "metalsmith-env": {},
        "metalsmith-build-date": true,
        "metalsmith-page-titles": true,
        "metalsmith-drafts": true,
        "metalsmith-filemetadata": [
            { "pattern": "labs/*/**/*.md", "metadata": { "collection": "labs", "layout": "labs-item.html" }, "preserve": true }
        ],
        "metalsmith-markdown": {
            "smartypants": true,
            "gfm": true,
            "tables": true
        },
        "metalsmith-just-a-moment": {
            "pattern": ["**/*.md"],
            "scanFiles": true,
            "scanMetadata": true
        },
        "metalsmith-typography": {
            "lang": "en"
        },
        "metalsmith-permalinks": {
            "pattern": ":collection/:title",

            "linksets": [{
                "match": { "collection": "labs" },
                "pattern": "labs/:title"
            }]
        },
        "metalsmith-collections": {
            "labs": {
                "sortBy": "date",
                "reverse": true
            }
        },
        "metalsmith-excerpts": true,
        "metalsmith-rurl": true,
        "metalsmith-pagination": {
            "collections.labs": {
                "perPage": 20,
                "layout": "labs.html",
                "first": "labs/index.html",
                "path": "labs/:num/index.html"              
            }
        },
        "metalsmith-publish": {
            "labs": {
                "draft": true,
                "private": true,
                "future": true,
                "futureFn": "console.log('Callback script passed (futureFiles, metalsmith, done). E.g. futureFiles = ' + Object.keys(futureFiles).join(', ')); done();"
            }
        },
        "metalsmith-sass": {},
        "metalsmith-layouts": {
            "engine": "handlebars",
            "rename": true,
            "partials": "layouts/partials"
        },
        "metalsmith-metallic": true,
        "metalsmith-broken-link-checker": false,
        "metalsmith-html-minifier": {
            "_metalsmith_if": "production",
            "removeAttributeQuotes": false,
            "keepClosingSlash": true
        },
        "metalsmith-eslint": {},
        "metalsmith-rssfeed": {
            "collectionKey": "public",            
            "siteUrl": "http://code0987.ilusons.com",
            "name": "rss.xml"
        },
        "metalsmith-mapsite": {
            "hostname": "http://code0987.ilusons.com"
        },
        "metalsmith-serve": {
        }
    }
}